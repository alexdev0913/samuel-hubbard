{% schema %}
{
	"name": "Openings section",
	"settings": [
		{
			"type": "text",
			"id": "heading",
			"label": "Heading"
		},
		{
			"type": "richtext",
			"id": "footnote",
			"label": "Footnote"
		}
	],
	"blocks": [
		{
			"type": "position",
			"name": "Position",
			"settings": [
				{
					"type": "text",
					"id": "location",
					"label": "Location"
				},
				{
					"type": "text",
					"id": "title",
					"label": "Title"
				},
				{
					"type": "url",
					"id": "external_url",
					"label": "External URL"
				}
			]
		}
	]
}
{% endschema %}

<section class="careers-openings">
<div class="c">
	{% if section.settings.heading != empty %}
		<div class="openings-heading">
			<h2 class="t-h-2">{{ section.settings.heading }}</h2>
		</div>
	{% endif %}

	<div class="openings-table">
		{% for i in section.blocks %}
			<div class="position f-h-center">
				<div class="position-location cr-gray-2">{{ i.settings.location }}</div>
				<div class="position-title">{{ i.settings.title }}</div>
				<div class="position-external-url">
					<a 
						class="button--secondary" 
						href="{{ i.settings.external_url }}" 
						target="_blank">
						Read More</a>
				</div>
			</div>
		{% endfor %}
	</div>

	{% if section.settings.footnote != empty %}
		<div class="openings-footnote">
			{{ section.settings.footnote }}
		</div>
	{% endif %}
</div>
</section>